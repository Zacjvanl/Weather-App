<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.SimplePage"
             BackgroundImage="cloudyWeather.jpg" >
    <StackLayout>
        <Label Text="{Binding Name}" Style="{DynamicResource labelStyle}" FontSize="Medium" FontAttributes = "Bold" LineBreakMode="NoWrap"/>
        <Button HorizontalOptions="Center" BackgroundColor="#8B4513" VerticalOptions="CenterAndExpand" Text="Login to Weather App" Clicked="Handle_Login_Clicked"></Button>
    </StackLayout>
</ContentPage>