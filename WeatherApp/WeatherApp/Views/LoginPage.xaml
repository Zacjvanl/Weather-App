<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp;assembly=WeatherApp"
             x:Class="WeatherApp.Views.LoginPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundImage="WeatherBackground.png">
    <ContentPage.Content>
        <StackLayout>
            <Image 
                Aspect="AspectFit" 
                Source="{local:ImageResource WeatherApp.Resources.NOAA.png}" 
                HorizontalOptions="Center" 
                TranslationY="50" />
            <Button 
                Text="Login" 
                WidthRequest="200" 
                BackgroundColor="SkyBlue" 
                TextColor="White" 
                HorizontalOptions="CenterAndExpand" 
                VerticalOptions="CenterAndExpand" 
                Clicked="LoginButtonOnClick"
                x:Name="Login"
                x:Uid="Login"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>